{
  "name": "@eonian/contracts",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "files": [
    "typechain/**/*",
    "artifacts/**/*",
    "deployments/**/*"
  ],
  "scripts": {
    "build": "hardhat compile",
    "start": "hardhat node --export-all './deployments/data.json'",
    "deploy-local": "hardhat deploy --reset",
    "test:hardhat": "hardhat test",
    "test:forge": "forge test -vvv",
    "test": "yarn test:hardhat && yarn test:forge",
    "docgen": "hardhat docgen",
    "postinstall": "forge install && cp -u .env.example .env",
    "clean": "forge clean",
    "test:fuzz": "FOUNDRY_FUZZ_RUNS=1000 forge test -vvv",
    "dev": "FOUNDRY_FUZZ_RUNS=5 forge test --watch -vvv",
    "serve": "hardhat node"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.186",
    "@types/mocha": "^10.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.3.6",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethers": "^5.7.2",
    "ganache": "^7.5.0",
    "hardhat": "^2.12.1",
    "hardhat-deploy": "^0.11.18",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-tracer": "^1.1.0-rc.9",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@openzeppelin/contracts": "^4.7.0",
    "@openzeppelin/contracts-upgradeable": "^4.7.0",
    "lodash": "^4.17.21",
    "tree-kill": "^1.2.2"
  }
}
