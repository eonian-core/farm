{
  "name": "@eonian/contracts",
  "version": "0.1.1",
  "main": "index.js",
  "license": "MIT",
  "files": [
    "typechain/**/*",
    "artifacts/**/*",
    "deployments/**/*"
  ],
  "scripts": {
    "build": "hardhat compile && forge build",
    "test:hardhat": "hardhat test",
    "test:forge": "forge test -vvv",
    "test:forge:watch": "forge test -vvv -w",
    "test": "yarn clean && yarn build && yarn test:hardhat && yarn test:forge",
    "docgen": "hardhat docgen",
    "postinstall": "forge install",
    "clean": "forge clean && rm -rf ./artifacts && rm -rf ./cache_hardhat && rm -rf ./out && rm -rf ./typechain-types",
    "test:fuzz": "FOUNDRY_FUZZ_RUNS=1000 forge test -vvv",
    "test:coverage": "forge coverage",
    "test:coverage-report": "rm -rf coverage && mkdir coverage && forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage --ignore-errors category",
    "test:forge-only": "forge test -vvvv --watch --match-test",
    "dev": "FOUNDRY_FUZZ_RUNS=5 forge test --watch -vvv",
    "serve": "hardhat node --export-all './deployments/local.json'",
    "lint": "solhint 'src/**/*.sol' --formatter stylish --fix && yarn lint:license",
    "lint:eslint": "eslint . --ext .ts,.js --fix",
    "lint:license": "node ./check-license.js",
    "gas-usage:report": "forge snapshot",
    "gas-usage:diff": "forge snapshot --diff",
    "pre-commit": "lint-staged"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@eonian/eslint-config": "^0.0.7",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/hardhat-upgrades": "^2.2.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.4",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.192",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.6",
    "chai": "^4.3.7",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "eslint": "^8.47.0",
    "ethers": "^6.7.1",
    "ganache": "^7.7.7",
    "hardhat": "^2.17.3",
    "hardhat-deploy": "^0.11.37",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-tracer": "^2.5.1",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@eonian/upgradeable": "0.1.4",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@types/sinon": "^10.0.15",
    "lodash": "^4.17.21",
    "sinon": "^15.1.0",
    "tree-kill": "^1.2.2"
  }
}
