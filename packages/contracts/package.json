{
  "name": "@eonian/contracts",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "files": [
    "typechain/**/*",
    "artifacts/**/*",
    "deployments/**/*"
  ],
  "scripts": {
    "build": "hardhat compile && forge build",
    "start": "hardhat node --export-all './deployments/data.json'",
    "test:hardhat": "hardhat test",
    "test:forge": "forge test -vvv",
    "test": "yarn clean && yarn build && yarn test:hardhat && yarn test:forge",
    "docgen": "hardhat docgen",
    "postinstall": "forge install",
    "clean": "forge clean && rm -rf ./artifacts && rm -rf ./cache_hardhat && rm -rf ./out && rm -rf ./typechain-types",
    "test:fuzz": "FOUNDRY_FUZZ_RUNS=1000 forge test -vvv",
    "test:coverage": "forge coverage",
    "dev": "FOUNDRY_FUZZ_RUNS=5 forge test --watch -vvv",
    "serve": "hardhat node",
    "lint": "solhint 'src/**/*.sol' --formatter stylish --fix && yarn lint:license",
    "lint:license": "./check-license.sh",
    "deploy:bsc": "export HARDHAT_NETWORK=bsc_mainnet_prod && yarn deploy",
    "deploy:sepolia": "export HARDHAT_NETWORK=sepolia && yarn deploy",
    "deploy": "yarn clean && yarn deploy:only && yarn deploy:etherscan && yarn deploy:sourcify && yarn deploy:export",
    "deploy:only": "hardhat deploy",
    "deploy:etherscan": "hardhat etherscan-verify --license AGPL-3.0 --force-license --solc-input",
    "deploy:sourcify": "hardhat sourcify",
    "deploy:export": "yarn deploy:export:json && yarn deploy:export:ts",
    "deploy:export:json": "hardhat export --export-all './deployments/deployed.json'",
    "deploy:export:ts": "hardhat export --export-all './deployments/deployed.ts'",
    "gas-usage:report": "forge snapshot",
    "gas-usage:diff": "forge snapshot --diff"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.192",
    "@types/mocha": "^10.0.1",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.3.7",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethers": "^5.7.2",
    "ganache": "^7.7.7",
    "hardhat": "^2.13.0",
    "@eonian/hardhat-deploy": "0.11.30",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-tracer": "^2.1.2",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomicfoundation/hardhat-foundry": "^1.0.1",
    "@openzeppelin/contracts": "^4.8.2",
    "@openzeppelin/contracts-upgradeable": "^4.8.2",
    "@types/sinon": "^10.0.15",
    "lodash": "^4.17.21",
    "sinon": "^15.1.0",
    "tree-kill": "^1.2.2"
  }
}
