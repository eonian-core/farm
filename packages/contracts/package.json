{
  "name": "@eonian/contracts",
  "version": "0.2.0",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "typechain/**/*",
    "artifacts/**/*",
    "deployments/**/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "hardhat compile && forge build",
    "test:forge": "forge test -vvv",
    "test:forge:watch": "forge test -vvv -w",
    "test:hardhat:bsc": "HARDHAT_FORK_NETWORK=BSC hardhat test",
    "test:hardhat:deploy": "HARDHAT_FORK_NETWORK=false hardhat test test/deploy/*.test.*",
    "test:hardhat": "yarn test:hardhat:deploy && yarn test:hardhat:bsc",
    "test": "yarn clean && yarn build && yarn test:forge && yarn test:hardhat",
    "docgen": "hardhat docgen",
    "postinstall": "forge install",
    "clean": "forge clean && rm -rf ./artifacts && rm -rf ./cache_hardhat && rm -rf ./out && rm -rf ./typechain-types",
    "test:fuzz": "FOUNDRY_FUZZ_RUNS=1000 forge test -vvv",
    "test:coverage": "forge coverage",
    "test:coverage-report": "rm -rf coverage && mkdir coverage && forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage --ignore-errors category",
    "test:forge-only": "forge test -vvvv --watch --match-test testHealthCheckPass",
    "dev": "FOUNDRY_FUZZ_RUNS=5 forge test --watch -vvv",
    "serve": "hardhat node --export-all './deployments/local.json'",
    "lint": "solhint 'src/**/*.sol' --formatter stylish --fix && yarn lint:license",
    "lint:eslint": "eslint . --ext .ts,.js --fix",
    "lint:license": "node ./check-license.js",
    "gas-usage:report": "forge snapshot",
    "gas-usage:diff": "forge snapshot --diff"
  },

  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@eonian/upgradeable": "0.2.1",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@types/sinon": "^10.0.15",
    "lodash": "^4.17.21",
    "sinon": "^15.1.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@eonian/eslint-config": "^0.0.7",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@openzeppelin/hardhat-upgrades": "^3.2.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.13",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "chai": "^4.3.7",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "ethers": "^6.13.1",
    "ganache": "^7.9.2",
    "hardhat": "2.19.5",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^2.0.2",
    "hardhat-tracer": "^2.8.1",
    "prettier": "^3.0.2",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.11",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.2"
  }
}
