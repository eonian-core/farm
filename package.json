{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "clean": "rimraf packages/**/lib",
    "graph": "nx graph",
    "start": "lerna exec --parallel -- yarn start",
    "dev": "lerna exec --parallel -- yarn dev",
    "build": "lerna run build",
    "test": "lerna run test",
    "postinstall": "git submodule update --init --recursive && lerna exec --scope='@eonian/contracts' -- yarn postinstall && generate-lockfile --lockfile ./yarn.lock --package ./packages/web/package.json -w ./packages/web/yarn.lock --force",
    "build:contracts": "lerna run build --scope='@eonian/contracts'",
    "test:contracts": "lerna run test --scope='@eonian/contracts'",
    "dev:contracts": "lerna run dev --scope='@eonian/contracts'",
    "serve:contracts": "lerna run serve --scope='@eonian/contracts'"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/ts-node",
      "**/ts-node/**",
      "**/typescript",
      "**/typescript/**",
      "**/typechain",
      "**/typechain/**",
      "**/@typechain",
      "**/@typechain/**",
      "**/@openzeppelin",
      "**/@openzeppelin/**",
      "**/@chainlink",
      "**/@chainlink/**"
    ]
  },
  "devDependencies": {
    "generate-lockfile": "^0.0.12",
    "lerna": "^5.1.6",
    "nx": "^14.3.6"
  }
}
